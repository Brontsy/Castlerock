@model Auslink.Web.Models.Login
@{
    Layout = null;
}

@if (!Model.IsLoggedIn)
{

<div id="login">

    @using (Html.BeginRouteForm("Login", FormMethod.Post))
    {
    
        <fieldset>

            <h2>Current Unitholders</h2>

            @Html.ValidationSummary()
        
            @Html.LabelFor(model => model.Username)
            @Html.TextBoxFor(model => model.Username)
        
            @Html.LabelFor(model => model.Password)
            @Html.PasswordFor(model => model.Password)

            @Html.HiddenFor(model => model.LoginLocation)

            <input type="submit" id="submit" name="submit" value="Login" />

            
            @Html.RouteLink("Forgotten your login details?", "Forgotten-Login-Details")

        </fieldset>
    }

</div>
